{
  "name": "fred-terminal-orchestrator",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter @fred/web dev",
    "dev:server": "cd apps/server-py && python -m uvicorn app.main:app --reload --port 3001",
    "start": "powershell -ExecutionPolicy Bypass -File ./start.ps1",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "~5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}